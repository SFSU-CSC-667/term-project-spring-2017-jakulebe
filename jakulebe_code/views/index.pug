extends layout

block content
  h1= message
  .container
    .row.form-group.col-sm-12.center
      form.col-sm-6(action="/goToLogin" method="post")
        button.form-control.buttonstyle.whitetext(type="submit") Login
  .container
    .row.form-group.col-sm-12.center
      form.col-sm-6(action="/goToRegister" method="post")
        button.form-control.buttonstyle.whitetext(type="submit") Register



        block content
          h1 Basic Chat App

          #chat-area
            .row
              .messages.col-lg-6.well.well-sm
            .row
              .col-lg-6
                .input-group
                  input.form-control(type='text', placeholder='Message...')
                  span.input-group-btn
                    button.btn.btn-default(type='button') Send

          form.form-inline#initial-form
            .form-group
              label(for='who-are-you') Who are you?
              input#who-are-you.form-control(type='text', placeholder='Anonymous')
            button.btn.btn-primary(type='submit') Start Chatting
